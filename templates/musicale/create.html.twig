{% extends 'base_admin.html.twig' %}

{% block title %}Création énigme Musicale{% endblock %}

{% block body %}
    {% set rows = 3 %}
    {% set cols = 6 %}
    {% set speed = 0.5 %}

    <style>
        .holderContainer {
            width: {{ cols * 85 }}px;
        }
        .holderContainer .holder {
            -webkit-animation: line {{ cols * speed }}s linear infinite;
            animation: line {{ cols * speed }}s linear infinite;
        }
        {% for i in 0..cols-1 %}
        .holderContainer .holder:nth-child({{ cols }}n+{{ i }}) {
            -webkit-animation-delay: {{ i * speed }}s;
            animation-delay: {{ i * speed }}s;
        }
        {% endfor %}
    </style>

    <div class="ui grid container pad" id="pageMusicale">
        <div class="row">
            <div class="sixteen wide mobile ten wide tablet ten wide computer centered column">
                <div class="ui segment">
                    <h3 class="ui dividing header">Création</h3>
                    {{ form_start(musicaleForm) }}
                    <div class="field">
                        {{ form_row(musicaleForm.numberOfRows) }}
                    </div>
                    <div class="field">
                        {{ form_row(musicaleForm.numberOfColumns) }}
                    </div>


                    <div class="ui grid">
                        <div class="row">
                            <div class="column">
                                <div class="holderContainer" id="holderContainer">
                                    {% for j in 0..rows-1 %}
                                        {% for i in 0..cols-1 %}
                                            <div class="holder" data-note="{{ j }}">
                                                <div class="note">
                                                    <div class="ripple"></div>
                                                </div>
                                            </div>
                                        {% endfor %}
                                    {% endfor %}
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="eight wide column">
                                <div class="button" id="audio">
                                    <i class="volume up icon"></i>
                                </div>
                            </div>
                            <div class="eight wide column">
                                <div class="button" id="reset">
                                    <i class="redo alternate icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>


                    <div class="field">
                        {{ form_row(musicaleForm.solution) }}
                    </div>
                    <div class="field">
                        {{ form_row(musicaleForm.levelOfDifficulty) }}
                    </div>
                    <div class="field">
                        {{ form_row(musicaleForm.save) }}
                    </div>
                    {{ form_end(musicaleForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
