{% extends 'base_admin.html.twig' %}

{% block title %}Création énigme Musicale{% endblock %}

{% block body %}
    <div class="ui grid container" id="pageMusicale">
        <div class="row">
            <div class="sixteen wide mobile ten wide tablet ten wide computer centered column">
                <div class="ui segment">
                    <h3 class="ui dividing header">Création</h3>
                    {{ form_start(musicaleForm) }}
                    <div class="field">
                        {{ form_row(musicaleForm.numberOfColumns) }}
                    </div>
                    <div class="ui grid">
                        <div class="row">
                            <div class="column">
                                <div class="holderContainer" id="holderContainer" data-col="{{ musicale.numberOfColumns }}">
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="column">
                                <div class="touchPad color0" data-note="0"><div class="ripple"></div><i class="plus icon"></i></div>
                                <div class="touchPad color1" data-note="1"><div class="ripple"></div><i class="plus icon"></i></div>
                                <div class="touchPad color2" data-note="2"><div class="ripple"></div><i class="plus icon"></i></div>
                                <div class="touchPad color3" data-note="3"><div class="ripple"></div><i class="plus icon"></i></div>
                                <div class="touchPad color4" data-note="4"><div class="ripple"></div><i class="plus icon"></i></div>
                                <div class="touchPad color5" data-note="5"><div class="ripple"></div><i class="plus icon"></i></div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="eight wide column">
                                <div class="button" id="audio">
                                    <i class="volume up icon"></i>
                                </div>
                            </div>
                            <div class="eight wide column">
                                <div class="button" id="reset">
                                    <i class="redo alternate icon"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="field">
                        {{ form_row(musicaleForm.solution) }}
                    </div>
                    <div class="field">
                        {{ form_row(musicaleForm.levelOfDifficulty) }}
                    </div>
                    <div class="field">
                        {{ form_row(musicaleForm.save) }}
                    </div>
                    {{ form_end(musicaleForm) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
{% endblock %}
