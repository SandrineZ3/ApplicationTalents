{% extends 'base_admin.html.twig' %}

{% block title %}Admin tableau de bord{% endblock %}

{% block body %}
    <div class="ui grid padded">
        <div class="row">
            <div class="four wide column">
                <h2>Tableau de bord</h2>
            </div>
        </div>
    </div>
    <div class="ui grid stackable padded">
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header purple">
                        <i class="icon user"></i>
                    </div>
                    <div class="header">
                        <div class="ui purple header">{{ nbreEnigmeInterpersonnelle }}</div>
                    </div>
                    <div class="meta">
                        Interpersonnelle
                    </div>
                    <div class="description">
                        Ensemble des énigmes Interpersonnelle
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui purple button" href="{{ path('admin_interpersonnelle') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header green">
                        <i class="icon language"></i>
                    </div>
                    <div class="header">
                        <div class="ui header green">{{ nbreEnigmeLinguistique }}</div>
                    </div>
                    <div class="meta">
                        Linguistique
                    </div>
                    <div class="description">
                        Ensemble des énigmes Linguistique
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui green button" href="{{ path('admin_linguistique') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header red">
                        <i class="icon calculator"></i>
                    </div>
                    <div class="header">
                        <div class="ui red header">{{ nbreEnigmeMathematique }}</div>
                    </div>
                    <div class="meta">
                        Mathématique
                    </div>
                    <div class="description">
                        Ensemble des énigmes Mathématique
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui red button" href="{{ path('admin_mathematique') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header brown">
                        <i class="icon user"></i>
                    </div>
                    <div class="header">
                        <div class="ui brown header">{{ nbreEnigmeMusicale }}</div>
                    </div>
                    <div class="meta">
                        Musicale
                    </div>
                    <div class="description">
                        Ensemble des énigmes Musicale
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui brown button" href="{{ path('admin_musicale') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header yellow">
                        <i class="icon tree"></i>
                    </div>
                    <div class="header">
                        <div class="ui yellow header">{{ nbreEnigmeNaturaliste }}</div>
                    </div>
                    <div class="meta">
                        Naturaliste
                    </div>
                    <div class="description">
                        Ensemble des énigmes Naturaliste
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui yellow button" href="{{ path('admin_naturaliste') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header teal">
                        <i class="icon map signs"></i>
                    </div>
                    <div class="header">
                        <div class="ui teal header">{{ nbreEnigmeVisuoSpatiale }}</div>
                    </div>
                    <div class="meta">
                        Visuo-Spatiale
                    </div>
                    <div class="description">
                        Ensemble des énigmes Visuo-Spatiale
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui teal button" href="{{ path('admin_visuoSpatiale') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="row centered">
            <div class="eight wide computer sixteen wide tablet sixteen wide mobile column">
                <div class="ui fluid card">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let ctx = document.getElementById('myChart').getContext('2d');
        let myChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Interpersonnelle', 'Linguistique', 'Mathématique', 'Musicale', 'Naturaliste', 'Visuo-Spatiale'],
                datasets: [{
                    label: '',
                    data: [12, 19, 3, 5, 2, 3],
                    backgroundColor: [
                        'rgba(255, 99, 132, 0.2)',
                        'rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(153, 102, 255, 0.2)',
                        'rgba(255, 159, 64, 0.2)'
                    ],
                    borderColor: [
                        'rgba(255, 99, 132, 1)',
                        'rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(153, 102, 255, 1)',
                        'rgba(255, 159, 64, 1)'
                    ],
                    borderWidth: 1
                }]
            },
            options: {
                scales: {
                    y: {
                        beginAtZero: true
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    }
                }
            }
        });
    </script>
{% endblock %}
