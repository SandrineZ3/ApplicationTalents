{% extends 'base_admin.html.twig' %}

{% block title %}Admin tableau de bord{% endblock %}

{% block body %}
    <div class="ui grid padded">
        <div class="row">
            <div class="four wide column">
                <h2>Tableau de bord</h2>
            </div>
        </div>
    </div>
    <div class="ui grid stackable padded">
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header colorInterpersonnelle">
                        <i class="icon user"></i>
                    </div>
                    <div class="header">
                        <div class="ui colorInterpersonnelle header">{{ nbreEnigmeInterpersonnelle }}</div>
                    </div>
                    <div class="meta">
                        Interpersonnelle
                    </div>
                    <div class="description">
                        Ensemble des énigmes Interpersonnelle
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui bgInterpersonnelle button" href="{{ path('admin_interpersonnelle') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header colorKinesthesique">
                        <i class="icon child"></i>
                    </div>
                    <div class="header">
                        <div class="ui header colorKinesthesique">{{ nbreEnigmeKinesthesique }}</div>
                    </div>
                    <div class="meta">
                        Kinesthésique
                    </div>
                    <div class="description">
                        Ensemble des énigmes Kinesthésique
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui bgKinesthesique button" href="{{ path('admin_kinesthesique') }}">Voir</a>
                    </div>
                </div>
            </div>
        </div>
        <div class="four wide computer eight wide tablet sixteen wide mobile column">
            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header colorLinguistique">
                        <i class="icon language"></i>
                    </div>
                    <div class="header">
                        <div class="ui header colorLinguistique">{{ nbreEnigmeLinguistique }}</div>
                    </div>
                    <div class="meta">
                        Linguistique
                    </div>
                    <div class="description">
                        Ensemble des énigmes Linguistique
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui bgLinguistique button" href="{{ path('admin_linguistique') }}">Voir</a>
                    </div>
                </div>
