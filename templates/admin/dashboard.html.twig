            <div class="eight wide computer sixteen wide tablet sixteen wide mobile column">
                <div class="ui fluid card">
                    <canvas id="myChart"></canvas>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    <script>
        let ctx = document.getElementById('myChart').getContext('2d');
        let myChart = new Chart(ctx, {
            type: 'pie',
            data: {
                labels: [
                    'Interpersonnelle',
                    'Intrapersonnelle',
                    'Kinesthésique',
                    'Linguistique',
                    'Mathématique',
                    'Musicale',
                    'Naturaliste',
                    'Visuo-Spatiale'
                ],
                datasets: [{
                    label: '',
                    data: [
                        {% for stat in tableauStats %}
                        '{{ stat }}',
                        {% endfor %}
                    ],
                    backgroundColor: [
                        '#D9C7ED',
                        '#B3EDF8',
                        '#E1DACA',
                        '#BCE9D5',
                        '#F6BDCE',
                        '#FEEEB3',
                        '#F9C29B',
                        '#FF889A'
                    ],
                }]
            },
            options: {
                plugins: {
                    title: {
                        display: true,
                        text: 'Statistiques Visiteurs'
                    },
                    tooltip: {
                        enabled: false,
                    },
                    legend: {
                        display: true
                    }
                }
            }
        });
    </script>
{% endblock %}
