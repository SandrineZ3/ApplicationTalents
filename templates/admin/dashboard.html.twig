            <div class="ui fluid card">
                <div class="content">
                    <div class="ui right floated header colorNaturaliste">
                        <i class="icon tree"></i>
                    </div>
                    <div class="header">
                        <div class="ui colorNaturaliste header">{{ nbreEnigmeNaturaliste }}</div>
                    </div>
                    <div class="meta">
                        Naturaliste
                    </div>
                    <div class="description">
                        Ensemble des énigmes Naturaliste
                    </div>
                </div>
                <div class="extra content">
                    <div class="ui two buttons">
                        <a class="ui bgNaturaliste button" href="{{ path('admin_naturaliste') }}">Voir</a>
