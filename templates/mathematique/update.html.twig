{% extends 'base_admin.html.twig' %}

{% block title %}Modifier énigme Logico-Mathématique{% endblock %}

{% block body %}
    <div class="ui grid container pad">
        <div class="row">
            <div class="sixteen wide mobile ten wide tablet six wide computer centered column">
                <div class="ui segment">
                    <h3 class="ui dividing header">Modification</h3>
                    {{ form_start(mathematiqueForm) }}
                    <div class="field">
                        {{ form_row(mathematiqueForm.image) }}
                    </div>
                    <div class="field">
                        {{ form_row(mathematiqueForm.solution) }}
                    </div>
                    <div class="field">
                        {{ form_row(mathematiqueForm.levelOfDifficulty) }}
                    </div>
                    <div class="field">
                        {{ form_row(mathematiqueForm.save) }}
                    </div>
                    {{ form_end(mathematiqueForm) }}
                    <button onclick="afficherModalDelete()" class="ui button">Supprimer</button>
                </div>
            </div>
            {#modal#}
            <div class="ui mini modal trash">
                <div class="header">
                    Suppression
                </div>
                <div class="content">
                    <p>Êtes-vous sûr de vouloir supprimer cette énigme</p>
                </div>
                <div class="actions">
                    <div class="ui negative button">
                        Non
                    </div>
                    <a class="ui positive right labeled icon button" href="{{ path('mathematique_delete', {'id': mathematique.id }) }}">
                        Oui
                        <i class="checkmark icon"></i>
                    </a>
                </div>
            </div>
            {#modal#}
        </div>
    </div>
{% endblock %}

