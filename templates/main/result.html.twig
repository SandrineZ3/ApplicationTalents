{% extends 'base.html.twig' %}

{% block title %}{{ parent() }} | Résultats{% endblock %}

{% block body %}
    {% include("inc/brainAnimation.html.twig") %}

    <div class="ui grid container h100 middle aligned" id="pageResult">
        <div class="row">
            <div class="sixteen wide mobile sixteen wide tablet sixteen wide computer column">
                <div id="htmlToPdf">
                    <div class="ui colorApp segment">
                        <h3 class="ui dividing header">
                            <div class="ui grid">
                                <div class="row">
                                    <div class="four wide column">
                                        Résultats
                                    </div>
                                    <div class="right floated eight wide mobile seven wide tablet five wide computer column" id="buttonShareSocialNetwork">
                                        <div class="ui center aligned padded grid">
                                            <div class="ui circular twitter icon button" data-url="http://www.rdvnomade.fr/result">
                                                <i class="twitter icon"></i>
                                            </div>
                                            <button class="ui circular facebook icon button" data-url="http://www.rdvnomade.fr/result">
                                                <i class="facebook icon"></i>
                                            </button>
                                            <button class="ui circular linkedin icon button" data-url="http://www.rdvnomade.fr/result">
                                                <i class="linkedin icon"></i>
                                            </button>
                                            <button class="ui circular icon button" onclick="generatePDF()" title="Télécharger en format PDF">
                                                <i class="fas fa-download"></i>
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </h3>
                        <div class="ui grid">
                            <div class="row" id="brainResult" style="flex-wrap: nowrap !important;">
                                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column"
                                     style="min-width:500px !important;">
                                    <div class="line-drawing-demo" id="brainSVG">
                                        {% include("main/content/brain.html.twig") %}
                                    </div>
                                    <div id="tableauResult"
                                         dataScore-Interpersonnelle="{{ user.scoreInterpersonnelle }}"
                                         dataScore-Intrapersonnelle="{{ user.scoreIntrapersonnelle }}"
                                         dataScore-Kinesthesique="{{ user.scoreKinesthesique }}"
                                         dataScore-Linguistique="{{ user.scoreLinguistique }}"
                                         dataScore-Mathematique="{{ user.scoreMathematique }}"
                                         dataScore-Musicale="{{ user.scoreMusicale }}"
                                         dataScore-Naturaliste="{{ user.scoreNaturaliste }}"
                                         dataScore-VisuoSpatiale="{{ user.scoreVisuoSpatiale }}">
                                    </div>
                                </div>
                                <div class="sixteen wide mobile sixteen wide tablet eight wide computer column"
                                     style="min-width:500px !important;">
                                    <div id="legend">

                                        <div class="ui styled fluid accordion">
                                            <div class="ui active title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendInterpersonnelle">Interpersonnelle</span>
                                            </div>
                                            <div class="active content">
                                                <p>
                                                    permet de collaborer, communiquer, être empathique et apaiser les
                                                    relations.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendIntrapersonnelle">Intrapersonnelle</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet la compréhension de soi, la connaissance de ses forces et
                                                    faiblesses.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendKinesthesique">Kinesthésique</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet d'utiliser les mots pour comprendre les autres et exprimer ce
                                                    que l’on pense.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendLinguistique">Verbale et Linguistique</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet d'utiliser les mots pour comprendre les autres et exprimer ce
                                                    que l’on pense.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendMathematique">Logique et Mathématique</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet de résoudre des problèmes, calculer, quantifier.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendMusicale">Musicale et Rythmique</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet de reconnaître des sons & rythmes, les reproduire ou les créer.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendNaturaliste">Naturaliste</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet de reconnaître, classer, identifier des minéraux, végétaux ou
                                                    animaux.
                                                </p>
                                            </div>

                                            <div class="ui title">
                                                <i class="dropdown icon"></i>
                                                <span id="legendVisuoSpatiale">Visuelle et Spatiale</span>
                                            </div>
                                            <div class="content">
                                                <p>
                                                    permet de se créer une représentation spatiale de son environnement.
                                                </p>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="ui colorApp segment">
                    <h4 class="ui dividing header">Continuer l'aventure !</h4>
                    <div id="playAgainButtons">
                        <a class="ui button link resultPage" href="{{ path('main') }}"
                           onclick="playClick()">Rejouer !</a>
                        <a class="ui button link resultPage" href="https://www.rdvnomade.com/"
                           onclick="playLink()" title="Découvrir RDV Nomade" target="_blank">Qui sommes-nous
                            ?</a>
                    </div>
                </div>
